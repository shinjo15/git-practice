<div class="container">
  <div class="row m-2 my-4">
    <h4 class="bg-light">マイページ</h4>
  </div>

  <div class="row mb-3">
    <p class="mb-0 d-flex align-items-center"><b>登録情報</b></p><%= link_to "編集する", edit_customer_path(@user.id), class: 'ml-3 btn btn-success' %>
  </div>

  <div class="row">
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead></thead>
        <tbody>
          <tr>
            <td class="col-3 table-secondary">氏名</td>
            <td class="col-5"><%= @user.last_name %><%= @user.first_name %></td>
          </tr>
          <tr>
            <td class="table-secondary">カナ</td>
            <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
          </tr>
          <tr>
            <td class="table-secondary">郵便番号</td>
            <td><%= @user.postal_code %></td>
          </tr>
          <tr>
            <td class="table-secondary">住所</td>
            <td><%= @user.address %></td>
          </tr>
          <tr>
            <td class="table-secondary">電話番号</td>
            <td><%= @user.telephone_number%></td>
          </tr>
          <tr>
            <td class="table-secondary">メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row mb-3">
    <p class="col-1 mb-0 d-flex align-items-center"><b>配送先</b></p><%= link_to "一覧を見る", addresses_path, class: 'col-2 ml-3 btn btn-primary' %>
  </div>
  <div class="row mb-3">
    <p class="col-1 mb-0 d-flex align-items-center"><b>注文履歴</b></p><%= link_to "一覧を見る", orders_path, class: 'col-2 ml-3 btn btn-primary' %>
  </div>
</div>