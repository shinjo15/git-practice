<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="containar">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggler="collapse" data-target="#navbarNavDropdown" area-controls="navbarNavDropdown" area-expanded="false" area-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
               <% if user_signed_in? %>
                <li>
                 <%= link_to "Home", new_user_session_path %>
                </li>
                <li>
                 <%= link_to "Users", users_path %>
                </li>
                <li>
                 <%= link_to "Books", books_path %>
                </li>
                <li>
                 <%= link_to "Log out", destroy_user_session_path, method: :delete %>
                </li>
               <% else %>
                <li>
                 <%= link_to "Home", root_path %>
                </li>
                <li>
                 <%= link_to "About", about_path %>
                </li>
                <li>
                 <%= link_to "Sign up", new_user_registration_path %>
                </li>
                <li>
                 <%= link_to "Log in", new_user_session_path %>
                </li>
               <% end %>
            </ul>
          </div>
        </div>
      </nav>
      
    </header>
    <%= yield %>
    <footer>CopyRight Infratop.inc</footer>
  </body>
</html>
