<p id='notice'></p>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
   
   <%= image_tag @user.get_profile_image(100, 100) %>
   
   <table class="table">
    <tbody>
     <tr></tr>
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
     </tr>
    </tbody>
   </table>
   
   <div class="row">
    <svg class="svg-inline--fa fa-user-cog fa-w-20" aria-hidden="true" focusable="false"
    data-prefix="fas" data-icon="user-cog" role="img" xmlus="http://www.w3.org/2000/svg"
    viewBox="0 0 640 512" data-fa-i2svg></svg>
    <%= link_to "edit", "/users/:id/edit", class: 'btn btn-outline-secondary btn-block edit_user_id' %>
   </div>
   <h2 class="mt-3">Now book</h2>
   <form acction="/books" accept-charset="UTF-8" method="post">
    <input type="hidden" name="authenicity_token" value="BXc1pgREA-zQA2JEzyKmaT9rR7ufziG9yfGnlN0Ivq1N9xuMaQCFsIzbOQyxESdYc_imYedJwti-Uvy71X01WQ"
    autocomplete="off">
    <%= form_with model:@book do |f| %>
    <div class="form-group">
     <label for="book_title">Title</label>
     <%= f.text_field :title, class: 'form-control book_title' %>
    </div>
    <div class="form-group">
     <label for="book_opinion">Opinion</label>
     <%= f.text_area :body, class: 'form-control book_body' %>
    </div>
    <div class="form-group">
     <%= f.submit 'Create Book', class: 'btn btn-success' %>
    </div>
    <% end %>
   </form>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>
     <% @books.each do |book| %>
   <tbody>
    <tr>
     <td><%= image_tag @user.get_profile_image(100, 100) %></td>
     <td><%= link_to book.title,  book_path(book.id), class: 'book_id'%></td>
     <td><%= book.body %></td>
    </tr>
   </tbody>
  <% end %>
   </table>
  </div>
 </div>
</div>
 
 
 




 


