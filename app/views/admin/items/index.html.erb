<h2>商品一覧</h2>
<%= link_to "新規登録", new_admin_item_path %>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-lg-1">商品ID</th>
      <th class="col-lg-3">商品名</th>
      <th class="col-lg-1">税抜価格</th>
      <th class="col-lg-3">ジャンル</th>
      <th class="col-lg-1">ステータス</th>
    </tr>
  </thead>
  <% @items.each do |item| %>
  <tbody>
    <tr>
      <td><%= item.id%></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price.to_s(:delimited) %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active? %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
<%= paginate @items %>