<div class="container">
  <h4 class="m-2 my-4"><span class="bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</span></h4>

<%= form_with model: @customer, url: admin_customer_path do |f| %>
<div class="row mb-3">
  <label class="col-3">会員ID</label>
  <%= @customer.id %>
</div>
  <div class="row mb-3">
    <label class="col-3  d-flex align-items-center">氏名</label>
    <%= f.text_field :last_name, class: "col-2 mr-5 form-control" %>
    <%= f.text_field :first_name, class: "col-2 form-control" %>
  </div>
  <div class="row mb-3">
    <label class="col-3 d-flex align-items-center">フリガナ</label>
    <%= f.text_field :last_name_kana, class: "col-2 mr-5 form-control" %>
    <%= f.text_field :first_name_kana, class: "col-2 form-control" %>
  </div>
  <div class="row mb-3">
    <label class="col-3 d-flex align-items-center">郵便番号</label>
    <%= f.text_field :postal_code, class: "col-2 form-control" %>
  </div>
  <div class="row mb-3">
    <label class="col-3 d-flex align-items-center">住所</label>
    <%= f.text_field :address, class: "col-7 form-control" %>
  </div>
  <div class="row mb-3">
    <label class="col-3 d-flex align-items-center">電話番号</label>
    <%= f.text_field :telephone_number, class: "col-2 form-control" %>
  </div>
  <div class="row mb-3">
    <label class="col-3 d-flex align-items-center">メールアドレス</label>
    <%= f.text_field :email, class: "col-2 form-control" %>
  </div>
  <div class="row mb-3">
    <label class="col-3">販売ステータス</label>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, '有効', value: true %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, '退会', value: false %>
  </div>

  <div class="row">
    <div class="col-3"></div>
    <%= f.submit "変更を保存", class: " btn btn-success" %>
  </div>

<% end %>
</div>
