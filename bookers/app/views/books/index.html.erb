<%= form_with model: @books, url: '/books', method: :post do |f| %>
 <p>Title</p>
 <%= f.text_field :title %>
 
 <p>Body</p>
 <%= f.text_area :body %>
 
 <%= f.submit 'Create Book'%>
<% end %>