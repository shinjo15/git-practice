<div class="container">
  <div class="row m-2 my-4">
    <div class="col-md-3">
      <h4 class="bg-light">ショッピングカート</h4>
    </div>
    <div class="col-md-9 text-right">
      <%= link_to "カートを空にする", cart_items_destroy_all_path,  method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>

  <table class="table table-bordered">
    <thead class="table-secondary">
      <th scope="col" style="width: 40%">商品名</th>
      <th scope="col" style="width: 15%">単価(税込)</th>
      <th scope="col" style="width: 15%">数量</th>
      <th scope="col" style="width: 15%">小計</th>
      <th scope="col" style="width: 15%"></th>
    </thead>
    <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= (cart_item.item.price*1.1).floor.to_s(:delimited) %></td>
        <td>
          <%= form_with model:cart_item, url:cart_item_path(cart_item), method: :PUT do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%= f.submit "変更", class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= (cart_item.sum_of_price).floor.to_s(:delimited) %></td>
        <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="col-md-8">
      <%= link_to "買い物を続ける", root_path, class: 'ml-5 btn btn-primary' %>
    </div>
    <div class="col-md-4 d-flex justify-content-end">
      <table class="table table-bordered">
        <thead></thead>
        <tbody>
          <tr>
            <td class="table-secondary", scope="col" style="width: 50%">合計金額</td>
            <td scope="col" style="width: 50%"><%= @total.round.to_s(:delimited)  %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 d-flex justify-content-center">
      <%= link_to "情報入力に進む", new_order_path, class: "col-2 btn btn-success" %>
    </div>
  </div>
</div>