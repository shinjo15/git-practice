<div class="container">
  <h4 class="m-2 my-4"><span class="bg-light">ジャンル一覧追加</span></h4>

  <%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="row mb-5">
    <label class="col-2 d-flex align-items-center"><b>ジャンル名</b></label>
    <%= f.text_field :name,  class: "col-3 mr-5 form-control", placeholder: "ジャンル名"  %>
    <%= f.submit '新規登録', class: "col-2 btn btn-success" %>
  <% end %>
  </div>

<table  class="table col-5">
  <thead class="table-secondary">
    <tr>
      <th scope="col" style="width: 65%">ジャンル</th>
      <th scope="col" style="width: 35%"></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success"  %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
