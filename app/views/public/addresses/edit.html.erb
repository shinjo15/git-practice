<div class="container">
  <h4 class="m-2 my-4"><span class="bg-light">配送先編集</span></h4>

<%= form_with model: @address, url: address_path(@address.id) do |f| %>
  <div class="row mb-2">
    <label class="col-2 small d-flex align-items-center">郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code, class: "col-2 form-control" %>
  </div>
  <div class="row mb-2">
    <label class="col-2 small d-flex align-items-center">住所</label>
    <%= f.text_field :address, class: "col-6 form-control" %>
  </div>
  <div class="row mb-5">
    <label class="col-2 small d-flex align-items-center">宛名</label>
    <div class="px-0 col-md-2"><%= f.text_field :name, class: "form-control" %></div>
    <div class="col-md-4"></div>
    <div class="col-md-4"><%= f.submit "変更内容を保存", class: "btn btn-success" %></div>
  </div>
  <% end %>
