<h2>配送先編集</h2>

<%= form_with model: @address, url: address_path(@address.id) do |f| %>
 <label>郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code %><br>
  <label>住所</label>
    <%= f.text_field :address %><br>
  <label>宛名</label>
    <%= f.text_field :name %>

  <%= f.submit "変更を保存" %>

<% end %>
