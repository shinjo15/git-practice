<div class="container">
  <h4 class="m-2 my-4"><span class="bg-light">新規会員登録</span></h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="row mb-3">
      <%= f.label :"名前", class: "col-2 d-flex align-items-center" %>
      <%= f.label :"(姓)", class: "col-1 d-flex align-items-center" %><%= f.text_field :last_name, class: "col-3 form-control", placeholder: "令和" %>
      <%= f.label :"(名)", class: "col-1 d-flex align-items-center" %><%= f.text_field :first_name, class: "col-3 form-control", placeholder: "道子" %>
    </div>
  
    <div class="row mb-3">
      <%= f.label :"フリガナ", class: "col-2 d-flex align-items-center" %>
      <%= f.label :"(セイ)", class: "col-1 d-flex align-items-center" %><%= f.text_field :last_name_kana, class: "col-3 form-control", placeholder: "レイワ" %>
      <%= f.label :"(メイ)", class: "col-1 d-flex align-items-center"  %><%= f.text_field :first_name_kana, class: "col-3 form-control", placeholder: "ミチコ" %>
    </div>

    <div class="row mb-3">
      <%= f.label :"メールアドレス", class: "col-3  d-flex align-items-center" %>
      <%= f.email_field :email, autocomplete: "email", class: "col-3 form-control", placeholder: "sample@example.com" %>
    </div>
  
    <div class="row mb-3">
      <%= f.label :"郵便番号(ハイフンなし)", class: "col-3 d-flex align-items-center" %>
      <%= f.text_field :postal_code, class: "col-3 form-control", placeholder: "0000000" %>
    </div>
  
    <div class="row mb-3">
      <%= f.label :"住所", class: "col-3  d-flex align-items-center" %>
      <%= f.text_field :address, class: "col-7 form-control", placeholder: "東京都渋谷区代々木神園町0-0" %>
    </div>
  
    <div class="row mb-3">
      <%= f.label :"電話番号(ハイフンなし)", class: "col-3  d-flex align-items-center" %>
      <%= f.text_field :telephone_number, class: "col-3 form-control", placeholder: "00000000000" %>
    </div>

    <div class="row mb-3">
      <div class="col-3 d-flex align-items-center">
        <%= f.label :"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-3 form-control" %>
    </div>

    <div class="row mb-3">
      <%= f.label :"パスワード(確認用)", class: "col-3 d-flex align-items-center" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3 form-control" %>
    </div>

    <div class="row">
      <div class="col-3"></div>
      <%= f.submit "新規登録", class: "col-3 btn btn-success" %>
    </div>
  <% end %>


<h4 class="m-2 my-4"><span class="bg-light">既に登録済みの方</span></h4>
<span class="mr-3">
  <u><%= link_to "こちら", new_customer_registration_path %></u>
</span>
からログインしてください。
