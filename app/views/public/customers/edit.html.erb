<h2>会員情報編集</h2>

<%= form_with model: @user, url: customer_path(@user.id) do |f| %>
  <label>氏名</label>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %><br>
  <label>フリガナ</label>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %><br>
  <label>郵便番号</label>
    <%= f.text_field :postal_code %><br>
  <label>住所</label>
    <%= f.text_field :address %><br>
  <label>電話番号</label>
    <%= f.text_field :telephone_number %><br>
  <label>メールアドレス</label>
    <%= f.text_field :email %><br>

  <%= f.submit "変更を保存" %>

<% end %>

<%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-outline-secondary' %>