<h2>ジャンル一覧追加</h2>

<table>
  <tr>
    <th>ジャンル名</th>
    <%= form_with model:@genre, url: admin_genres_path do |f| %>
    <th><%= f.text_field :name %></th>
    <th><%= f.submit '変更を保存' %></th>
    <% end %>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.name %></td>
      <td><% link_to "編集する", url: edit_admin_genre(genre.id) %></td>
    </tr>
  </tbody>
  <% end %>
</table>

