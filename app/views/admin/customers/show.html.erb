<h2><%= @customer.last_name@customer.first_name %>の会員詳細</h2>

<table>
  <thead></thead>
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name  @customer.first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.last_name_kana  @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <% if @customer.is_active? %>
          有効
        <% else %>
          退会
        <% end %></td>
    </tr>
    <tr>
      <td>
        <%= link_to "編集する", edit_admin_customer_path(customer.id) %>
        <%= link_to "注文履歴一覧を見る", admin_path %>
      </td>
    </tr>
  </tbody>
</table>