<h2>商品詳細</h2>

<%= image_tag @item.image %>
<table>
  <thead></thead>
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre_id %></td>
    </tr>
    <tr>
      <td>販売価格<br>(税抜き価格)</td>
      <td>
        <%= (@item.price*1.1).floor.to_s(:delimited) %>円
        (<%= @item.price.to_s(:delimited) %>円)
      </td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td>
        <% if @item.is_active? %>
          販売中
        <% else %>
          販売停止中
        <% end %></td>
    </tr>
    <td><%= link_to "編集する", edit_admin_item_path(@item.id) %></td>
  </tbody>
</table>

