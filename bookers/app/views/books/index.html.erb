<h1>Books</h1>

<% @lists.each do |book| %>

 <p>Title</p>
 <span><%= book.title %></span>
 <p>body</p>
 <span><%= book.body %></span>
 
 <span><%= link_to "show", book_path(book.id)%></span>
 <span><%= link_to "Edit", edit_book_path(book.id)%></span>
 <span><%= link_to "Destroy", book_path(book.id), method: :delete, "date-confirm" => "本当に削除しますか？"%></span>
 
<% end %>


