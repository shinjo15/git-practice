<%= render 'info', user:@user, book:@book %>

<div class="col-md-8 offset-md-1">
 <h2>Book detail</h2>

 <table class="table">
  <tbody>
   <tr>
    <td><%= link_to user_path(@books.user.id) do %>
        <%= image_tag(@books.user.get_profile_image(100, 100)) %>
        <br><%= @user.name %>
        <% end %></td>
    <td><%= link_to @books.title, book_path(@books.id) %></td>
    <td><%= @books.body %></td>
   </tr>
  </tbody>
 </table>
</div>
