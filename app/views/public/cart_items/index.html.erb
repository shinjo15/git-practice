<h2>ショッピングカート</h2>

<%= link_to "カートを空にする", cart_items_destroy_all_path,  method: :delete, class: 'btn btn-outline-secondary'  %>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= (cart_item.item.price*1.1).floor.to_s(:delimited) %></td>
        <td>
          <%= form_with model:cart_item, url:cart_item_path(cart_item), method: :PUT do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%= f.submit "変更" %>
          <% end %>
        <td>
        <td>¥<%= (cart_item.sum_of_price).floor.to_s(:delimited) %></td>
        <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: 'btn btn-sm btn-danger' %></td>
    <% end %>
    </tr>
  </tbody>
</table>
<%= link_to "買い物を続ける", root_path, class: 'btn btn-sm btn-danger' %>
合計金額<%= @total.round.to_s(:delimited)  %>
<%= link_to "情報入力に進む", new_order_path, class: 'btn btn-sm btn-danger' %>