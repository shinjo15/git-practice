<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
    
     <% if @bookfind.errors.any? %>
      <h3><%= @bookfind.errors.count %>error prohibited this obj from being saved:</h3>
       <ul>
        <%= @bookfind.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
       </ul>
     <% end %>
    
    <%= form_with model:@bookfind do |f| %>
     <div class="form-group">
       <label for="book_title">Title</label>
       <%= f.text_field :title, id:"book_title", class: 'form-control book_title'%>
     </div>
    
     <div class="form-group">
       <label for="book_body">Opinions</label>
       <%= f.text_area :body, id:"book_body", class: 'form-control book_body'%>
     </div>
    
     <div class="form-group">
       <%= f.submit "Update Book", class: 'btn btn-success'%>
     </div>
    <% end %>
    
    <%= link_to "Show", book_path(@bookfind.id) %>
    <%= " | " %>
    <%= link_to "Back", books_path %>
  </div>
 </div>
</div>