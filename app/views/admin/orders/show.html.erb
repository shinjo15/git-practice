<h2>注文履歴詳細</h2>

<table>
  <thead></thead>
  <tbody>
    <tr>
      <td>購入者</td>
      <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
    </tr>
    <tr>
      <td>注文日</td>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>
        <%= @order.address_display %><br>
        <%= @order.customer.last_name %><%= @order.customer.first_name %></td>
    </tr>
    <tr>
      <td>支払方法</td>
      <td> <% @order.payment_method_display %></tr>
    <tr>
      <td>注文ステータス</td>
      <td>
        <%= form_with model: @order, url: admin_order_path, method: :patch |f| %>
          <%= f.select :order_status, options_from_collection_for_select(Order.all, :id, :order_status) %>
        <% end %>
        </td>
    </tr>
  </tbody>
</table>