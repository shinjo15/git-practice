<h2>配送先登録/一覧</h2>

<%= form_with model: @address_new, url: addresses_path do |f| %>
  <label>郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code %><br>
  <label>住所</label>
    <%= f.text_field :address %><br>
  <label>宛名</label>
    <%= f.text_field :name %><br>

 <%= f.submit "新規登録" %>

<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-lg-1">郵便番号</th>
      <th class="col-lg-3">住所</th>
      <th class="col-lg-1">宛名</th>
      <th class="col-lg-3"></th>
    </tr>
  </thead>
  <% @address.each do |address| %>
  <tbody>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集する", edit_address_path, class: 'btn btn-outline-secondary' %>
      　<%= link_to "削除する", address_path,　method: :delete, class: 'btn btn-outline-secondary' %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>