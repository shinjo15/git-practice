<%= render 'info', user:@user, book:@book %>

<h1>Book detail</h1>

 <table class="table">
  <tbody>
   <tr>
    <td><%= link_to image_tag @book.user.get_profile_image(100, 100), user_path(user.id) %></td>
    <td><%= link_to @book.title, book_path(book.id) %></td>
    <td><%= @book.body %></td>
   </tr>
  </tbody>
 </table>

