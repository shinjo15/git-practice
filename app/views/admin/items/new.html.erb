<h2>商品新規登録</h2>

<%= form_with model:@item, url: admin_items_path do |f| %>
  <label>商品画像</label>
    <%= f.file_field :image, accept: "image/*" %><br>
  <label>商品名</label>
    <%= f.text_field :name %><br>
  <label>商品説明</label>
    <%= f.text_area :introduction %><br>
  <label>ジャンル </label>
    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %><br>
  <label>税抜価格</label>
    <%= f.text_field :price %><label>円</label><br>
  <label>販売ステータス</label>
    <%= f.radio_button :is_active, Item.is_actives.key(0) %>
    <%= f.label :is_active, Item.is_actives_i18n[:sale] %>
    <%= f.radio_button :is_active, Item.is_actives.key(1) %>
    <%= f.label :is_active, Item.is_actives_i18n[:selling_discontinued] %><br>

  <%= f.submit "新規登録" %>

<% end %>