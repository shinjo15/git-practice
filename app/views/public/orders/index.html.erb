<h2>注文履歴一覧</h2>

<table>
  <thead>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
        <td><%= order.created_at %></td>
        <td><%= order.address_display %></td>
        <td><%= order.order_item.item.name %><td>
        <td><%= order.order_item.purchase_price %>円</td>
        <td><%= order.order_status_display %></td>
        <td><%= link_to "表示する", order_path(item.id) %></td>
    <% end %>
    </tr>
  </tbody>
</table>