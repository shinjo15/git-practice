<h2>注文情報入力</h2>

<%= form_with model: @order do |f| %>
  <label>支払方法</label><br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: true %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%><br>
    
  <label>お届け先</label><br>
    <%= f.radio_button :current_customer,current_customer.address , checked: true %>
      <%= f.label current_customer.address %><br>
      
    <%= f.radio_button :address,address_id %>
      <%= f.label "登録済み住所から選択" %><br>
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>
    
    <%= f.radio_button :address,@address %>
      <%= f.label "新しいお届け先" %><br>
      <%= form_with model: @address do |f| %>
        <label>郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code %><br>
        <label>住所</label>
          <%= f.text_field :address %><br>
        <label>宛名</label>
          <%= f.text_field :name %>
      <% end %>
 

  <%= f.submit "新規登録" %>

<% end %>