<h2>注文履歴一覧</h2>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <% order.order_items.each do |item| %>
        <% @sam += item.amount %>
      <% end %>
      <td><%= @sam %></td>
      <td>
        <% if item.is_active? %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>