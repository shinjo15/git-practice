<h2>入力情報確認</h2>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= (cart_item.item.price*1.1).floor.to_s(:delimited) %></td>
        <td><%= cart_item.amount %><td>
        <td>¥<%= (cart_item.sum_of_price).floor.to_s(:delimited) %></td>
    <% end %>
    </tr>
  </tbody>
</table>

<table>
  <thead></thead>
  <tbody>
    <tr>
      <td>送料</td>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <td>商品合計</td>
      <td><%= @total.round.to_s(:delimited)  %></td>
    </tr>
    <tr>
      <td>請求金額</td>
      <td><%= (@total += @order.postage).round.to_s(:delimited) %></td>
    </tr>
  </tbody>
</table>

<p>支払方法</p>
  <% if @payment_method == "credit_card" %>
      クレジットカード
  <% else %>
      銀行振込
  <% end %>
<p>お届け先</p>
    <%= @order.address_display %>
    
<%= form_with @cart_items, method: :post, url: orders_complete_path do |f| %>
	<%= f.hidden_field :order_id, :value => carrent_order.id %>
	<%= f.hidden_field :item_id, :value => cart_item.id %>
	<%= f.hidden_field :amount, :value =>cart_item.amount %>
	<%= f.hidden_field :purchase_price, :value => (cart_item.item.price*1.1).floor.to_s(:delimited) %>
<% end %>

<%= form_with @order, method: :post, url: orders_complete_path do |f| %>
	<%= f.hidden_field :payment_method %>
	<%= f.hidden_field :postal_code %>
	<%= f.hidden_field :address %>
	<%= f.hidden_field :postage, :value => (@total += @order.postage).round.to_s(:delimited) %>
	<%= f.submit '送信する' %>
<% end %>


