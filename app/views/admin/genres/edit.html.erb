<div class="container">
  <h4 class="m-2 my-4"><span class="bg-light">ジャンル編集</span></h4>

  <%= form_with model: @genre, url: admin_genre_path do |f| %>
  <div class="row mb-5">
    <label class="col-2 d-flex align-items-center"><b>ジャンル名</b></label>
    <%= f.text_field :name,  class: "col-3 mr-5 form-control", placeholder: "ジャンル名"  %>
    <%= f.submit '変更を保存', class: "col-2 btn btn-success" %>
  <% end %>
</div>